<!DOCTYPE html>
<html lang="en">
<head>
  <title>Login</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Clear login fields when returning with back button -->
  <script>
    window.addEventListener('pageshow', function (event) {
      if (event.persisted) {
        document.querySelector('input[name="username"]').value = "";
        document.querySelector('input[name="password"]').value = "";
      }
    });
  </script>
</head>
<body class="d-flex justify-content-center align-items-center vh-100 bg-light">
  <form action="/login" method="POST" autocomplete="off" class="p-4 bg-white border rounded" style="min-width: 300px;">
    <h2 class="mb-3">Login</h2>
    <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <div class="mb-3">
      <label>Username</label>
      <input name="username" class="form-control" required autocomplete="off">
    </div>
    <div class="mb-3">
      <label>Password</label>
      <input type="password" name="password" class="form-control" required autocomplete="new-password">
    </div>
    <button class="btn btn-primary w-100">Login</button>
  </form>
</body>
</html>
